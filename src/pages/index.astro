---
import Definition from "@/components/Definition.astro";
import Differences from "@/components/Differences.astro";
import Features from "@/components/Features.astro";
import Game from "@/components/Game.astro";
import Hero from "@/components/Hero.astro";
import PeopleOfIntegrity from "@/components/PeopleOfIntegrity.astro";
import UniversityIntegrity from "@/components/UniversityIntegrity.astro";
import Layout from "@/layouts/Layout.astro";

const title = "Preseminario";
const description =
  "Exposición acerca de la integridad en la materia Preseminario de la Universidad Católica de Colombia";
---

<Layout title={title} description={description}>
  <Hero />
  <main class="max-w-4xl mx-auto min-h-dvh">
    <Definition />
    <Features />
    <Differences />
    <PeopleOfIntegrity />
    <UniversityIntegrity />
    <Game />
  </main>
</Layout>
